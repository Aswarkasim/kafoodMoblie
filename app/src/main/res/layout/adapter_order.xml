<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LLAdapterOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24dp"/>


        <LinearLayout
            android:id="@+id/LLAdapter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nasi Goreng Pedas"
                android:fontFamily="@font/poppins_bold"
                android:textColorHint="@android:color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aswar kasim"
                android:drawableStart="@drawable/ic_accout"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="KM 6"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proses"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@android:color/black"
                android:padding="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_detail_order_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Lihat detail >"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/LLAdapter1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>